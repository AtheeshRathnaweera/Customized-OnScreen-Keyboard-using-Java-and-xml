<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <padding android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <corners android:radius="30dp"
                android:bottomRightRadius="20dp" android:bottomLeftRadius="0dp"
                android:topLeftRadius="0dp" android:topRightRadius="20dp"/>

            <gradient
                android:angle="45"
                android:startColor="#20acc9"
                android:endColor="#20acc9"/>

        </shape>


    </item>

</selector>